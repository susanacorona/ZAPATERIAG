{% extends 'base.html.twig' %}

{% block body %}
    <h1>Registro Completo</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ salida.id }}</td>
            </tr>
            <tr>
                <th>Tiposalida</th>
                <td>{{ salida.tipoSalida }}</td>
            </tr>
            <tr>
                <th>Referencia</th>
                <td>{{ salida.referencia }}</td>
            </tr>
            <tr>
                <th>Autorizacion</th>
                <td>{{ salida.autorizacion }}</td>
            </tr>
            <tr>
                <th>Encargado</th>
                <td>{{ salida.encargado }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{% if salida.fecha %}{{ salida.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('salida_index') }}">Salida principal</a>
        </li>
        <li>
            <a href="{{ path('salida_edit', { 'id': salida.id }) }}">Editar registro</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Eliminar registro">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
